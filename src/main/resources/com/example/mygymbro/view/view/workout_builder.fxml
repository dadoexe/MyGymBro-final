<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<VBox prefHeight="650.0" prefWidth="900.0" styleClass="main-bg"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.mygymbro.views.gui.GraphicWorkoutBuilderView">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <children>
        <VBox spacing="15" styleClass="bg-overlay" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="25" right="30" bottom="25" left="30"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="COSTRUTTORE SCHEDA" textFill="#00E676">
                        <font><Font name="System Bold" size="22.0" /></font>
                    </Label>
                    <Label text="Configura gli esercizi e i parametri di allenamento" textFill="#AAAAAA" />
                </VBox>
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="lblTotalTime" text="Durata stimata: 0 min" textFill="WHITE"
                           style="-fx-background-color: #2B2B36; -fx-padding: 8 15; -fx-background-radius: 20; -fx-font-weight: bold;" />
                </VBox>
            </HBox>

            <Separator style="-fx-opacity: 0.1;" />

            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="400.0" />
                </columnConstraints>
                <children>
                    <VBox spacing="5">
                        <Label text="Nome della Scheda" textFill="#888888" style="-fx-font-size: 11px; -fx-font-weight: bold;" />
                        <TextField fx:id="txtPlanName" promptText="Es: Massa Invernale" style="-fx-background-color: #1E1E24; -fx-text-fill: white; -fx-padding: 10;" />
                    </VBox>
                    <VBox spacing="5" GridPane.columnIndex="1">
                        <Label text="Note e Commenti" textFill="#888888" style="-fx-font-size: 11px; -fx-font-weight: bold;" />
                        <TextArea fx:id="txtComment" promptText="Note aggiuntive per l'atleta..." prefHeight="45.0" wrapText="true"
                                  style="-fx-control-inner-background: #1E1E24; -fx-text-fill: white;" />
                    </VBox>
                </children>
            </GridPane>

            <VBox spacing="10" style="-fx-background-color: rgba(43, 43, 54, 0.4); -fx-background-radius: 10; -fx-padding: 15;">
                <Label text="AGGIUNGI ESERCIZIO" textFill="#00E676" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
                <HBox spacing="10" alignment="BOTTOM_LEFT">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <TextField fx:id="txtSearchExercise" promptText="ðŸ” Cerca esercizio..." style="-fx-background-color: #121212; -fx-text-fill: white;" />
                        <ComboBox fx:id="comboExercises" promptText="Seleziona..." maxWidth="Infinity" style="-fx-background-color: #121212;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Sets" textFill="#666" style="-fx-font-size: 10px;" />
                        <TextField fx:id="txtSets" prefWidth="50.0" alignment="CENTER" text="3" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Reps" textFill="#666" style="-fx-font-size: 10px;" />
                        <TextField fx:id="txtReps" prefWidth="50.0" alignment="CENTER" text="10" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Rest (s)" textFill="#666" style="-fx-font-size: 10px;" />
                        <TextField fx:id="txtRest" prefWidth="60.0" alignment="CENTER" text="90" />
                    </VBox>
                    <Button onAction="#onAddExercise" text="AGGIUNGI" styleClass="btn-success" style="-fx-padding: 8 20;" />
                </HBox>
            </VBox>

            <TableView fx:id="tableExercises" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                <columns>
                    <TableColumn fx:id="colName" prefWidth="250" text="ESERCIZIO" />
                    <TableColumn fx:id="colMuscle" prefWidth="150" text="MUSCOLO" />
                    <TableColumn fx:id="colSets" prefWidth="80" text="SETS" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colReps" prefWidth="80" text="REPS" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colRest" prefWidth="100" text="REST (s)" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colDelete" prefWidth="60" text="ELIMINA" style="-fx-alignment: CENTER;" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button onAction="#onCancel" text="ANNULLA" styleClass="btn-danger" style="-fx-padding: 10 25;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnSave" onAction="#onSavePlan" text="SALVA E ASSEGNA SCHEDA" styleClass="btn-success"
                        style="-fx-padding: 12 40; -fx-font-weight: bold; -fx-font-size: 14px;" />
            </HBox>
        </VBox>
    </children>
</VBox>