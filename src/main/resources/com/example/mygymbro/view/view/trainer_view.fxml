<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mygymbro.views.gui.GraphicTrainerView">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-background-color: #1E1E24; -fx-border-color: #333; -fx-border-width: 0 0 1 0;">
            <Label fx:id="lblWelcome" text="DASHBOARD TRAINER" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <HBox HBox.hgrow="ALWAYS" /> <Button onAction="#handleLogout" styleClass="btn-danger" text="Logout" />
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.3" style="-fx-background-color: transparent;">

            <AnchorPane minWidth="250.0" style="-fx-background-color: #1E1E24;">
                <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                    <Label text="I TUOI CLIENTI" textFill="#00E676">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <ListView fx:id="listAthletes" VBox.vgrow="ALWAYS" style="-fx-background-color: #2B2B36;" />
                </VBox>
            </AnchorPane>

            <AnchorPane style="-fx-background-color: #121212;">
                <VBox spacing="15" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

                    <Label fx:id="lblSelectedClient" text="Seleziona un cliente..." textFill="WHITE">
                        <font><Font size="22.0" /></font>
                    </Label>

                    <Label text="SCHEDE ASSEGNATE:" textFill="#AAAAAA" />

                    <ListView fx:id="listWorkoutPlans" VBox.vgrow="ALWAYS" style="-fx-background-color: #1E1E24;" />

                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <Button fx:id="btnAddPlan" text="+ ASSEGNA NUOVA SCHEDA" onAction="#handleCreatePlan"
                                styleClass="btn-success" disable="true"/>
                        <Button fx:id="btnEditPlan" text="MODIFICA SELEZIONATA" onAction="#handleEditPlan"
                                styleClass="button" disable="true"/>
                    </HBox>
                </VBox>
            </AnchorPane>

        </SplitPane>
    </center>
</BorderPane>